{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-sass-guidelines",
    "stylelint-order",
    "stylelint-prettier/recommended"
  ],
  "rules": {
    "selector-class-pattern": "^[a-z][a-zA-Z0-9-]+$",
    "max-nesting-depth": 4,
    "selector-pseudo-class-no-unknown": [true, { "ignorePseudoClasses": ["", "global"] }]
  }
}
